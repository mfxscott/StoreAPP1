<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/app_bg"
              android:orientation="vertical"
              >


    <RelativeLayout
        android:background="@color/white"
        android:id="@+id/main_search_rels"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/search_detail_goback_linlay"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:id="@+id/all_title_back_tv"
                android:gravity="center_vertical"
                android:layout_alignParentLeft="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@mipmap/back_arrow" />
        </LinearLayout>
        <RelativeLayout
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@+id/search_detail_goback_linlay"
            android:layout_toLeftOf="@+id/main_message_ivs"
            android:background="@drawable/search_bg_gray_shap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:singleLine="true"
                android:imeOptions="actionSearch"
                android:drawablePadding="5dp"
                android:textColorHint="@color/col_hint"
                android:hint="请输入要购买的商品名称"
                android:drawableLeft="@mipmap/search_blue_img"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:textCursorDrawable="@null"
                android:maxLength="20"
                android:textColor="@color/col_333"
                android:textSize="@dimen/ac_text_size_14"
                android:id="@+id/search_detail_editv"
                android:padding="8dp"
                android:background="@color/transparent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
        <ImageView
            android:visibility="gone"
            android:layout_centerVertical="true"
            android:id="@+id/main_message_ivs"
            android:layout_alignParentRight="true"
            android:src="@mipmap/icon_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <View
        android:id="@+id/main_goods_type_item_bv"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_bg" />
    <LinearLayout
        android:background="@color/white"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.xianhao365.o2o.utils.view.SwipyRefreshLayout
            android:id="@+id/search_detail_swipyrefreshlayout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            >
        <android.support.v7.widget.RecyclerView
            android:scrollbars="none"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:id="@+id/search_detail_recycler"
            android:listSelector="@null"
            android:numColumns="1"
            android:stretchMode="columnWidth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:divider="#00000000"
            />
        </com.xianhao365.o2o.utils.view.SwipyRefreshLayout>
    </LinearLayout>
</LinearLayout>