<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/app_bg"
                android:orientation="vertical"
                tools:context="com.xianhao365.o2o.fragment.my.store.AccManageActivity">

    <RelativeLayout
        android:background="@color/white"
        android:id="@+id/gopay_title_lin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/gopay_title_goback_linlay"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_margin="10dp"
                android:id="@+id/all_title_back_tv"
                android:gravity="center_vertical"
                android:layout_alignParentLeft="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@mipmap/back_arrow" />
        </LinearLayout>
        <TextView
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"
            android:paddingLeft="40dip"
            android:paddingRight="40dip"
            android:singleLine="true"
            android:ellipsize="end"
            android:paddingTop="10dip"
            android:paddingBottom="10dip"
            android:id="@+id/gopay_title_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="提交订单"
            android:textColor="@color/title_black"
            android:textSize="18sp" />
        <ImageView
            android:id="@+id/gopay_cust_iv"
            android:layout_marginRight="10dip"
            android:layout_centerVertical="true"
            android:src="@mipmap/icon_main_customer_service"
            android:layout_alignParentRight="true"
            android:layout_width="30dp"
            android:layout_height="30dp"/>
        <View
            android:layout_below="@+id/gopay_title_name"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line_bg" />
    </RelativeLayout>

    <ScrollView
        android:layout_above="@+id/gopay_btn_rel"
        android:layout_below="@+id/gopay_title_lin"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/gopay_check_address_rel"
                android:layout_marginTop="10dp"
                android:padding="15dp"
                android:background="@drawable/white_gray_selector"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginLeft="25dp"
                    android:textColor="@color/col_333"
                    android:layout_centerVertical="true"
                    android:text="添加收货地址"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <LinearLayout
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/gopay_address_name_tv"
                            android:textSize="@dimen/ac_text_size_16"
                            android:textColor="@color/col_333"
                            android:text=""
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:layout_marginLeft="20dp"
                            android:id="@+id/gopay_address_phone_tv"
                            android:textSize="@dimen/ac_text_size_16"
                            android:textColor="@color/col_333"
                            android:text=""
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/gopay_address_info_tv"
                        android:textSize="@dimen/ac_text_size_14"
                        android:textColor="@color/col_333"
                        android:layout_marginTop="5dp"
                        android:text=""
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <ImageView
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/arrow_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>

            <RelativeLayout
                android:background="@drawable/white_gray_selector"
                android:layout_marginTop="10dp"
                android:padding="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="horizontal"
                    android:id="@+id/gopay_goods_num_rel"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <android.support.v7.widget.RecyclerView
                            android:scrollbars="none"
                            android:id="@+id/go_pay_submit_order_recycler"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/go_pay_order_detail_lin"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/go_pay_goods_num_tv"
                            android:textColor="@color/col_999"
                            android:textSize="@dimen/ac_text_size_14"
                            android:layout_gravity="center_vertical"
                            android:text="共两类"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <ImageView
                            android:src="@mipmap/arrow_right"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </LinearLayout>
                <RelativeLayout
                    android:layout_marginTop="5dp"
                    android:layout_below="@+id/gopay_goods_num_rel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_centerVertical="true"
                        android:textColor="@color/col_333"
                        android:textSize="@dimen/ac_text_size_14"
                        android:text="配送时间"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <LinearLayout
                        android:layout_alignParentRight="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:textSize="@dimen/ac_text_size_14"
                            android:textColor="@color/orange"
                            android:layout_gravity="center_vertical"
                            android:text="2017-07-06 7:00-11:00"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <ImageView
                            android:src="@mipmap/arrow_right"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </RelativeLayout>
            </RelativeLayout>
            <!-- ===========支付方式 ===============-->
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:id="@+id/gopay_online_rel"
                    android:background="@drawable/white_gray_selector"
                    android:padding="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_centerVertical="true"
                        android:text="在线支付"
                        android:layout_toRightOf="@+id/topup_wx_pay_iv"
                        android:textColor="@color/col_333"
                        android:textSize="@dimen/ac_text_size_14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <ImageView
                        android:layout_marginRight="10dp"
                        android:id="@+id/gopay_online_iv"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:src="@mipmap/topup_pay_check"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>
                <View
                    android:visibility="visible"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/line_bg" />
                <RelativeLayout
                    android:id="@+id/gopay_getto_rel"
                    android:background="@drawable/white_gray_selector"
                    android:padding="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_centerVertical="true"
                        android:text="货到付款"
                        android:layout_toRightOf="@+id/topup_wx_pay_iv"
                        android:textColor="@color/col_333"
                        android:textSize="@dimen/ac_text_size_14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <ImageView
                        android:visibility="gone"
                        android:layout_marginRight="10dp"
                        android:id="@+id/gopay_getto_iv"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:src="@mipmap/topup_pay_check"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>
                <View
                    android:visibility="visible"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/line_bg" />
                <RelativeLayout
                    android:id="@+id/gopay_use_yhj_rel"
                    android:padding="15dp"
                    android:background="@drawable/white_gray_selector"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:textColor="@color/col_333"
                        android:textSize="@dimen/ac_text_size_14"
                        android:text="优惠券"
                        android:id="@+id/gopay_yhj_iv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/go_pay_coupons_tv"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/col_999"
                        android:textSize="@dimen/ac_text_size_14"
                        android:text="1张"
                        android:layout_toRightOf="@+id/gopay_yhj_iv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <LinearLayout
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_marginRight="5dp"
                            android:textColor="@color/col_999"
                            android:textSize="@dimen/ac_text_size_14"
                            android:layout_gravity="center_vertical"
                            android:text="去使用"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <ImageView
                            android:src="@mipmap/arrow_right"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:background="@color/white"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:visibility="gone"
                    android:padding="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="@dimen/ac_text_size_14"
                        android:textColor="@color/col_999"
                        android:text="下单总金额"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_alignParentRight="true"
                        android:textSize="@dimen/ac_text_size_14"
                        android:textColor="@color/col_333"
                        android:text="￥109.00"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>
                <RelativeLayout
                    android:padding="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/gopay_yj_name_tv"
                        android:textSize="@dimen/ac_text_size_14"
                        android:textColor="@color/col_999"
                        android:text="押金"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_toRightOf="@+id/gopay_yj_name_tv"
                        android:textSize="@dimen/ac_text_size_12"
                        android:textColor="@color/col_999"
                        android:text="(不参与促销活动及优惠劵减免)"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_alignParentRight="true"
                        android:textSize="@dimen/ac_text_size_14"
                        android:textColor="@color/col_333"
                        android:text="-￥0.00"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>
                <RelativeLayout
                    android:padding="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="@dimen/ac_text_size_14"
                        android:textColor="@color/col_999"
                        android:text="优惠减免"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_alignParentRight="true"
                        android:textSize="@dimen/ac_text_size_14"
                        android:textColor="@color/col_333"
                        android:text="-￥0.00"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>
                <RelativeLayout
                    android:padding="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="@dimen/ac_text_size_14"
                        android:textColor="@color/col_999"
                        android:text="运费"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/go_pay_freightAmount_tv"
                        android:layout_alignParentRight="true"
                        android:textSize="@dimen/ac_text_size_14"
                        android:textColor="@color/orange"
                        android:text="￥10.00"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>
                <RelativeLayout
                    android:visibility="gone"
                    android:padding="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="@dimen/ac_text_size_14"
                        android:textColor="@color/col_999"
                        android:text="运费优惠"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_alignParentRight="true"
                        android:textSize="@dimen/ac_text_size_14"
                        android:textColor="@color/orange"
                        android:text="-￥10.00"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>
                <RelativeLayout
                    android:padding="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="@dimen/ac_text_size_14"
                        android:textColor="@color/col_999"
                        android:text="小计"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/go_pay_price_tv"
                        android:layout_alignParentRight="true"
                        android:textSize="@dimen/ac_text_size_14"
                        android:textColor="@color/orange"
                        android:text="￥109.00"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>
            </LinearLayout>
            <RelativeLayout
                android:visibility="gone"
                android:layout_marginBottom="20dp"
                android:padding="5dp"
                android:background="@color/white"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/gopay_goods_num_rel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_centerVertical="true"
                    android:textColor="@color/col_999"
                    android:textSize="@dimen/ac_text_size_14"
                    android:text="使用余额"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <LinearLayout
                    android:layout_marginRight="10dp"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="@dimen/ac_text_size_14"
                        android:textColor="@color/col_333"
                        android:layout_gravity="center_vertical"
                        android:text="余额￥0.00"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <CheckBox
                        android:layout_marginLeft="5dp"
                        android:button="@drawable/check_box_gopay"
                        android:src="@mipmap/pay_off"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>































    <RelativeLayout
        android:id="@+id/gopay_btn_rel"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/col_333"
                android:textSize="@dimen/ac_text_size_14"
                android:text="合计："
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/go_pay_total_tv"
                android:textStyle="bold"
                android:textColor="@color/orange"
                android:textSize="@dimen/ac_text_size_18"
                android:text=""
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textColor="@color/orange"
                android:textSize="@dimen/ac_text_size_12"
                android:text="元"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:visibility="gone"
            android:background="@color/white"
            android:padding="10dp"
            android:id="@+id/car_del_num_liny"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/car_del_num_tv"
                android:textColor="@color/orange"
                android:textSize="@dimen/ac_text_size_16"
                android:text="已选0项"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <TextView
            android:id="@+id/gopay_btn"
            android:paddingRight="40dp"
            android:paddingLeft="40dp"
            android:paddingBottom="15dp"
            android:paddingTop="15dp"
            android:layout_alignParentRight="true"
            android:background="@color/orange"
            android:textSize="@dimen/ac_text_size_16"
            android:textColor="@color/white"
            android:text="立刻支付"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
</RelativeLayout>