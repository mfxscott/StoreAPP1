<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/app_bg"
              android:orientation="vertical"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:fillViewport="true"
              tools:context="com.xianhao365.o2o.fragment.my.store.AccManageActivity">

    <RelativeLayout
        android:background="@color/white"
        android:id="@+id/main_search_rels"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/search_goback_linlay"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:id="@+id/all_title_back_tv"
                android:gravity="center_vertical"
                android:layout_alignParentLeft="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@mipmap/back_arrow" />
        </LinearLayout>
        <RelativeLayout
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@+id/search_goback_linlay"
            android:layout_toLeftOf="@+id/main_message_ivs"
            android:background="@drawable/search_bg_gray_shap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:singleLine="true"
                android:imeOptions="actionSearch"
                android:drawablePadding="5dp"
                android:textColorHint="@color/col_hint"
                android:hint="请输入要购买的商品名称"
                android:drawableLeft="@mipmap/search_blue_img"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:textCursorDrawable="@null"
                android:maxLength="20"
                android:textColor="@color/col_333"
                android:textSize="@dimen/ac_text_size_14"
                android:id="@+id/search_editv"
                android:padding="8dp"
                android:background="@color/transparent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
        <ImageView
            android:visibility="gone"
            android:layout_centerVertical="true"
            android:id="@+id/main_message_ivs"
            android:layout_alignParentRight="true"
            android:src="@mipmap/icon_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <View
        android:id="@+id/main_goods_type_item_bv"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_bg" />

    <LinearLayout
        android:layout_marginTop="20dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:padding="15dp"
            android:textColor="@color/col_999"
            android:textSize="@dimen/ac_text_size_16"
            android:text="热门搜索"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <View
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line_bg" />
    </LinearLayout>
    <LinearLayout
        android:background="@color/white"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.xianhao365.o2o.utils.view.FlowLayout
            app:width_space="10dp"
            app:height_space="10dp"
            android:id="@+id/flow_layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="5dp"/>
        <!--<GridView-->
        <!--android:scrollbars="none"-->
        <!--android:layout_gravity="center_horizontal"-->
        <!--android:gravity="center_horizontal"-->
        <!--android:id="@+id/search_hot_mygridv"-->
        <!--android:listSelector="@null"-->
        <!--android:numColumns="4"-->
        <!--android:stretchMode="columnWidth"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:divider="#00000000"-->
        <!--/>-->
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:padding="15dp"
                android:textColor="@color/col_999"
                android:textSize="@dimen/ac_text_size_16"
                android:text="搜索历史"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/search_remove_hist_tv"
                android:layout_alignParentRight="true"
                android:padding="15dp"
                android:textColor="@color/col_999"
                android:textSize="@dimen/ac_text_size_14"
                android:text="清除历史记录"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <RelativeLayout
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:padding="15dp"
                android:textColor="@color/col_999"
                android:textSize="@dimen/ac_text_size_14"
                android:text="暂无搜索记录"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <com.xianhao365.o2o.utils.view.MyViewGroup
                android:visibility="gone"
                android:background="@color/white"
                android:orientation="horizontal"
                android:id="@+id/search_hist_lin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </com.xianhao365.o2o.utils.view.MyViewGroup>
            <!--<com.scott.shopplat.utils.view.MyGridView-->
                <!--android:layout_gravity="center_horizontal"-->
                <!--android:gravity="center_horizontal"-->
                <!--android:id="@+id/search_hist_gridv"-->
                <!--android:listSelector="@null"-->
                <!--android:numColumns="4"-->
                <!--android:stretchMode="columnWidth"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:divider="#00000000"/>-->
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>