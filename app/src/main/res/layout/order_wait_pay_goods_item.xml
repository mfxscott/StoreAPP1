<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/order_wait_pay_rel1"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_marginLeft="5dp"
            android:src="@mipmap/img_gdy"
            android:id="@+id/order_wait_pay_item_iv"
            android:layout_width="@dimen/goods_img_info_size"
            android:layout_height="@dimen/goods_img_info_size"/>
        <LinearLayout
            android:layout_marginLeft="5dp"
            android:layout_centerVertical="true"
            android:orientation="vertical"
            android:layout_toRightOf="@+id/order_wait_pay_item_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/order_wait_pay_goods_name_tv"
                android:textSize="@dimen/ac_text_size_14"
                android:textColor="@color/col_333"
                android:text="新鲜上市的黄豆芽"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:textSize="@dimen/ac_text_size_14"
                android:textColor="@color/col_333"
                android:text="￥44.00/袋（10斤）"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/order_wait_pay_goods_skuprice_tv"
                    android:textStyle="bold"
                    android:textSize="@dimen/ac_text_size_14"
                    android:textColor="@color/col_333"
                    android:text="￥5.8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/order_wait_pay_goods_unit_tv"
                    android:textSize="@dimen/ac_text_size_12"
                    android:textColor="@color/col_999"
                    android:text="/斤"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/order_wait_pay_item_mp_tv"
                    android:layout_marginLeft="5dp"
                    android:textSize="@dimen/ac_text_size_12"
                    android:textColor="@color/col_999"
                    android:text="￥6.8/斤"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_marginRight="5dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/order_wait_pay_num_tv"
                android:textColor="@color/col_333"
                android:textSize="@dimen/ac_text_size_14"
                android:text="x 5斤"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/order_wait_pay_goods_total_tv"
                android:textColor="@color/col_333"
                android:textSize="@dimen/ac_text_size_14"
                android:text="36.88元"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
