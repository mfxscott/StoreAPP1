<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    >

    <com.scott.shopplat.utils.ObservableScrollView
        android:id="@+id/main_scroll_view"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fadingEdge="none"
        android:scrollbars="none" >
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/main_banner_lin"
                android:visibility="visible"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >
                <com.youth.banner.Banner
                    android:id="@+id/banner"
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    app:delay_time="3000"
                    app:indicator_margin="5dp"
                    app:indicator_height="8dp"
                    app:indicator_width="8dp"
                    app:title_background="#a0000000"
                    app:title_height="40dp"
                    >
                </com.youth.banner.Banner>
            </RelativeLayout>
            <Button
                android:id="@+id/home_scan_btn"
                android:text="调用扫描二维码"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <Button
                android:id="@+id/home_goweb_btn"
                android:text="跳转web界面"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/home_gotrandno_edt"
                android:hint="输入流水号"
                android:layout_width="match_parent"
                android:layout_height="500dp" />
            <Button
                android:id="@+id/home_gopay_btn"
                android:text="跳转支付"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:id="@+id/main_channel_lin"
                android:visibility="visible"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >
                <com.youth.banner.Banner
                    android:id="@+id/channel"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    app:delay_time="2000"
                    app:indicator_margin="5dp"
                    app:indicator_height="8dp"
                    app:indicator_width="8dp"
                    app:title_background="#a0000000"
                    app:title_height="40dp"
                    >
                </com.youth.banner.Banner>
            </LinearLayout>
        </LinearLayout>

    </com.scott.shopplat.utils.ObservableScrollView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:visibility="gone"
            android:background="@color/white"
            android:id="@+id/main_search_rels"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_centerVertical="true"
                android:id="@+id/main_custom_service_ivs"
                android:src="@mipmap/icon_custom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:padding="5dp"
                android:layout_centerVertical="true"
                android:gravity="center_horizontal"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_toRightOf="@+id/main_custom_service_ivs"
                android:layout_toLeftOf="@+id/main_message_ivs"
                android:background="@drawable/search_bg_gray_shap"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/icon_search"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:textSize="@dimen/ac_text_size_14"
                    android:layout_marginLeft="5dp"
                    android:layout_gravity="center_vertical"
                    android:textColor="#888888"
                    android:text="搜索"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <ImageView
                android:layout_centerVertical="true"
                android:id="@+id/main_message_ivs"
                android:layout_alignParentRight="true"
                android:src="@mipmap/icon_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
        <RelativeLayout
            android:visibility="visible"
            android:id="@+id/main_search_rel"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_centerVertical="true"
                android:id="@+id/main_custom_service_iv"
                android:src="@mipmap/icon_main_customer_service"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:padding="5dp"
                android:layout_centerVertical="true"
                android:gravity="center_horizontal"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_toRightOf="@+id/main_custom_service_iv"
                android:layout_toLeftOf="@+id/main_message_iv"
                android:background="@drawable/search_bg_shap"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/icon_main_search"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_marginLeft="5dp"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/white"
                    android:text="搜索"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
            <ImageView
                android:layout_centerVertical="true"

                android:id="@+id/main_message_iv"
                android:layout_alignParentRight="true"
                android:src="@mipmap/icon_main_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
