<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/app_bg"
              android:orientation="vertical"
              tools:context="com.scott.shopplat.fragment.my.store.AccManageActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <include layout="@layout/all_title_layout"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_margin="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_margin="10dp"
            android:textSize="@dimen/ac_text_size_14"
            android:textColor="@color/col_888"
            android:text="银行卡号"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
            android:textSize="@dimen/ac_text_size_14"
            android:maxLength="20"
            android:digits="1234567890"
            android:inputType="number"
            android:textColorHint="@color/col_hint"
            android:textColor="@color/col_333"
            android:padding="10dp"
            android:hint="请输入银行卡号"
            android:background="@drawable/white_round_shap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_margin="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_margin="10dp"
            android:textSize="@dimen/ac_text_size_14"
            android:textColor="@color/col_888"
            android:text="银行卡密码"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
            android:textSize="@dimen/ac_text_size_14"
            android:maxLength="6"
            android:digits="1234567890"
            android:inputType="number"
            android:textColorHint="@color/col_hint"
            android:textColor="@color/col_333"
            android:padding="10dp"
            android:hint="请输入密码"
            android:background="@drawable/white_round_shap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <Button
        android:id="@+id/topup_btn"
        android:textSize="@dimen/ac_text_size_18"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="30dp"
        android:padding="10dp"
        android:textColor="@color/white"
        android:text="确定充值"
        android:background="@drawable/login_button_selector"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>