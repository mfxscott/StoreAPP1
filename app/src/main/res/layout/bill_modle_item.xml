<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">

    <RelativeLayout
        android:background="@color/transparent"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">
        <ImageView
            android:id="@+id/main_bill_item_addcar_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@mipmap/add_img" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/down_img" />

            <TextView
                android:id="@+id/main_bill_item_market_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="￥8.80"
                android:textColor="@color/orange"
                android:textSize="@dimen/ac_text_size_14" />

            <TextView
                android:id="@+id/main_bill_item_unit_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="/斤"
                android:textColor="@color/col_999"
                android:textSize="@dimen/ac_text_size_12" />

            <TextView
                android:layout_marginLeft="10dp"
                android:id="@+id/main_bill_item_model_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥44.00/袋（10斤）"
                android:textColor="@color/col_333"
                android:textSize="@dimen/ac_text_size_12" />

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>
