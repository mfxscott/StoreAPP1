<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/app_bg"
              tools:context="com.xianhao365.o2o.fragment.my.store.StoreMyFragment">
    <com.xianhao365.o2o.utils.view.WebViewSwipeRefreshLayout
        android:id="@+id/user_center_swipe_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:padding="15dp"
                    android:background="@drawable/my_title_bg_shap"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_alignParentRight="true"
                        android:id="@+id/per_my_message_iv"
                        android:src="@mipmap/my_message"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_below="@id/per_my_message_iv"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:id="@+id/my_head_img"
                            android:src="@mipmap/default_head"
                            android:layout_width="60dp"
                            android:layout_height="60dp"/>
                        <LinearLayout
                            android:layout_marginLeft="10dp"
                            android:gravity="center_vertical"
                            android:layout_gravity="center_vertical"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            >
                            <TextView
                                android:id="@+id/user_info_name_tv"
                                android:textSize="@dimen/ac_text_size_16"
                                android:textColor="@color/white"
                                android:text="鲜好摊主店铺"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <RelativeLayout
                                android:layout_marginTop="5dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                >
                                <TextView
                                    android:layout_centerVertical="true"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/ac_text_size_12"
                                    android:text="普通会员"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                                <TextView
                                    android:id="@+id/my_acc_mamage_tv"
                                    android:padding="5dp"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/ac_text_size_14"
                                    android:layout_alignParentRight="true"
                                    android:text="账号管理>>"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                            </RelativeLayout>
                        </LinearLayout>
                    </LinearLayout>
                </RelativeLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:id="@+id/my_per_wallet"
                        android:layout_marginTop="10dp"
                        android:padding="15dp"
                        android:background="@drawable/white_gray_selector"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:textSize="@dimen/ac_text_size_14"
                            android:textColor="@color/col_333"
                            android:text="我的钱包"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <ImageView
                            android:layout_alignParentRight="true"
                            android:src="@mipmap/arrow_right"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </RelativeLayout>
                    <View
                        android:visibility="visible"
                        android:id="@+id/all_title_lin_view"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/line_bg" />
                    <LinearLayout
                        android:background="@color/white"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:gravity="center_horizontal|center_vertical"
                            android:paddingTop="15dp"
                            android:paddingBottom="15dp"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:textSize="@dimen/ac_text_size_14"
                                android:textColor="@color/orange"
                                android:text="25.00"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:layout_marginTop="5dp"
                                android:textSize="@dimen/ac_text_size_12"
                                android:textColor="@color/col_333"
                                android:text="钱包余额"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                        <LinearLayout
                            android:gravity="center_horizontal|center_vertical"

                            android:paddingTop="15dp"
                            android:paddingBottom="15dp"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:textSize="@dimen/ac_text_size_14"
                                android:textColor="@color/orange"
                                android:text="2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:layout_marginTop="5dp"
                                android:textSize="@dimen/ac_text_size_12"
                                android:textColor="@color/col_333"
                                android:text="优惠券"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                        <RelativeLayout
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:id="@+id/my_per_dis_lin"
                                android:visibility="gone"
                                android:gravity="center_horizontal|center_vertical"
                                android:paddingTop="15dp"
                                android:paddingBottom="15dp"
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:textSize="@dimen/ac_text_size_14"
                                    android:textColor="@color/orange"
                                    android:text="充值"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                                <TextView
                                    android:layout_marginTop="5dp"
                                    android:textSize="@dimen/ac_text_size_12"
                                    android:textColor="@color/col_333"
                                    android:text="充值到账户余额"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                            </LinearLayout>
                            <LinearLayout
                                android:id="@+id/my_store_dis_lin"
                                android:gravity="center_horizontal|center_vertical"
                                android:paddingTop="15dp"
                                android:paddingBottom="15dp"
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:textSize="@dimen/ac_text_size_14"
                                    android:textColor="@color/orange"
                                    android:text="提现"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                                <TextView
                                    android:layout_marginTop="5dp"
                                    android:textSize="@dimen/ac_text_size_12"
                                    android:textColor="@color/col_333"
                                    android:text="提现到银行卡"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                            </LinearLayout>
                        </RelativeLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:id="@+id/my_store_myorder_rel"
                        android:layout_marginTop="10dp"
                        android:padding="15dp"
                        android:background="@drawable/white_gray_selector"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:textSize="@dimen/ac_text_size_14"
                            android:textColor="@color/col_333"
                            android:text="我的订单"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <LinearLayout
                            android:layout_alignParentRight="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_gravity="center_vertical"
                                android:textSize="@dimen/ac_text_size_14"
                                android:textColor="@color/col_999"
                                android:text="查看全部订单"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <ImageView
                                android:src="@mipmap/arrow_right"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>

                    </RelativeLayout>
                    <View
                        android:visibility="visible"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/line_bg" />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:background="@color/white"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:background="@drawable/white_gray_selector"
                                android:id="@+id/my_store_waitpay_lin"
                                android:gravity="center_horizontal|center_vertical"
                                android:paddingTop="15dp"
                                android:paddingBottom="15dp"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <FrameLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">
                                    <ImageView
                                        android:padding="5dp"
                                        android:src="@mipmap/my_wait_pay"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"/>
                                    <TextView
                                        android:textStyle="bold"
                                        android:gravity="center_horizontal|center_vertical"
                                        android:padding="2dp"
                                        android:layout_gravity="right"
                                        android:background="@drawable/my_msg_shap"
                                        android:textColor="@color/white"
                                        android:text="1"
                                        android:textSize="@dimen/ac_text_size_12"
                                        android:layout_width="20dp"
                                        android:layout_height="20dp"/>
                                </FrameLayout>
                                <TextView
                                    android:textSize="@dimen/ac_text_size_12"
                                    android:textColor="@color/col_333"
                                    android:text="待付款"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                            </LinearLayout>
                            <LinearLayout
                                android:background="@drawable/white_gray_selector"

                                android:id="@+id/my_store_waitsend_lin"
                                android:gravity="center_horizontal|center_vertical"
                                android:paddingTop="15dp"
                                android:paddingBottom="15dp"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <FrameLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">
                                    <ImageView
                                        android:padding="5dp"
                                        android:src="@mipmap/my_wait_send"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"/>
                                    <TextView
                                        android:textStyle="bold"
                                        android:gravity="center_horizontal|center_vertical"
                                        android:padding="2dp"
                                        android:layout_gravity="right"
                                        android:background="@drawable/my_msg_shap"
                                        android:textColor="@color/white"
                                        android:text="20"
                                        android:textSize="@dimen/ac_text_size_12"
                                        android:layout_width="20dp"
                                        android:layout_height="20dp"/>
                                </FrameLayout>
                                <TextView
                                    android:layout_marginTop="5dp"
                                    android:textSize="@dimen/ac_text_size_12"
                                    android:textColor="@color/col_333"
                                    android:text="待发货"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                            </LinearLayout>
                            <LinearLayout
                                android:background="@drawable/white_gray_selector"

                                android:id="@+id/my_store_waitget_lin"
                                android:gravity="center_horizontal|center_vertical"
                                android:paddingTop="15dp"
                                android:paddingBottom="15dp"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <FrameLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">
                                    <ImageView
                                        android:padding="5dp"
                                        android:src="@mipmap/my_wait_get"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"/>
                                    <TextView
                                        android:textStyle="bold"
                                        android:gravity="center_horizontal|center_vertical"
                                        android:padding="2dp"
                                        android:layout_gravity="right"
                                        android:background="@drawable/my_msg_shap"
                                        android:textColor="@color/white"
                                        android:text="12+"
                                        android:textSize="@dimen/ac_text_size_12"
                                        android:layout_width="20dp"
                                        android:layout_height="20dp"/>
                                </FrameLayout>
                                <TextView
                                    android:layout_marginTop="5dp"
                                    android:textSize="@dimen/ac_text_size_12"
                                    android:textColor="@color/col_333"
                                    android:text="待收货"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                            </LinearLayout>
                        </LinearLayout>
                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:layout_marginTop="10dp"
                        android:padding="15dp"
                        android:background="@drawable/white_gray_selector"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:textSize="@dimen/ac_text_size_14"
                            android:textColor="@color/col_333"
                            android:text="常用工具"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <LinearLayout
                            android:visibility="gone"
                            android:layout_alignParentRight="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_gravity="center_vertical"
                                android:textSize="@dimen/ac_text_size_14"
                                android:textColor="@color/col_999"
                                android:text="查看全部订单"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <ImageView
                                android:src="@mipmap/arrow_right"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>

                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white">

                        <LinearLayout
                            android:background="@drawable/white_gray_selector"
                            android:id="@+id/my_store_mykey_lin"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_horizontal|center_vertical"
                            android:orientation="vertical"
                            android:paddingBottom="15dp"
                            android:paddingTop="15dp">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@mipmap/my_store_key"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:text="我的钥匙"
                                android:textColor="@color/col_333"
                                android:textSize="@dimen/ac_text_size_12"/>
                        </LinearLayout>

                        <LinearLayout
                            android:background="@drawable/white_gray_selector"
                            android:id="@+id/my_store_cybill_lin"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_horizontal|center_vertical"
                            android:orientation="vertical"
                            android:paddingBottom="15dp"
                            android:paddingTop="15dp">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@mipmap/my_store_bill"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:text="常用清单"
                                android:textColor="@color/col_333"
                                android:textSize="@dimen/ac_text_size_12"/>
                        </LinearLayout>

                        <LinearLayout
                            android:background="@drawable/white_gray_selector"
                            android:id="@+id/my_store_return_lin"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_horizontal|center_vertical"
                            android:orientation="vertical"
                            android:paddingBottom="15dp"
                            android:paddingTop="15dp">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@mipmap/my_store_return"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:text="退押金"
                                android:textColor="@color/col_333"
                                android:textSize="@dimen/ac_text_size_12"/>
                        </LinearLayout>

                        <LinearLayout
                            android:background="@drawable/white_gray_selector"
                            android:id="@+id/my_store_new_lin"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_horizontal|center_vertical"
                            android:orientation="vertical"
                            android:paddingBottom="15dp"
                            android:paddingTop="15dp">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@mipmap/my_store_new"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:text="我的需求"
                                android:textColor="@color/col_333"
                                android:textSize="@dimen/ac_text_size_12"/>
                        </LinearLayout>

                        <LinearLayout
                            android:background="@drawable/white_gray_selector"
                            android:id="@+id/my_store_myfp_lin"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_horizontal|center_vertical"
                            android:orientation="vertical"
                            android:paddingBottom="15dp"
                            android:paddingTop="15dp">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@mipmap/my_store_fp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:text="我的发票"
                                android:textColor="@color/col_333"
                                android:textSize="@dimen/ac_text_size_12"/>
                        </LinearLayout>
                    </LinearLayout>

                    <View
                        android:visibility="visible"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/line_bg" />
                </LinearLayout>


                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:id="@+id/my_store_help_center_rel"
                        android:layout_marginTop="10dp"
                        android:padding="15dp"
                        android:background="@drawable/white_gray_selector"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:textSize="@dimen/ac_text_size_14"
                            android:textColor="@color/col_333"
                            android:text="帮助中心"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <LinearLayout

                            android:layout_alignParentRight="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_gravity="center_vertical"
                                android:textSize="@dimen/ac_text_size_14"
                                android:textColor="@color/col_999"
                                android:text="进入客户服务中心"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <ImageView
                                android:src="@mipmap/arrow_right"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>

                    </RelativeLayout>
                    <View
                        android:visibility="visible"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/line_bg" />
                    <LinearLayout
                        android:background="@color/white"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:background="@drawable/white_gray_selector"
                            android:id="@+id/my_store_quesion_lin"
                            android:gravity="center_horizontal|center_vertical"
                            android:paddingTop="15dp"
                            android:paddingBottom="15dp"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:src="@mipmap/my_store_question"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:layout_marginTop="5dp"
                                android:textSize="@dimen/ac_text_size_12"
                                android:textColor="@color/col_333"
                                android:text="常用问题"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                        <LinearLayout
                            android:background="@drawable/white_gray_selector"
                            android:id="@+id/my_store_fwcenter_lin"
                            android:gravity="center_horizontal|center_vertical"
                            android:paddingTop="15dp"
                            android:paddingBottom="15dp"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:src="@mipmap/my_store_center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:layout_marginTop="5dp"
                                android:textSize="@dimen/ac_text_size_12"
                                android:textColor="@color/col_333"
                                android:text="服务中心"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                        <LinearLayout
                            android:background="@drawable/white_gray_selector"
                            android:id="@+id/my_store_zxservice_lin"
                            android:gravity="center_horizontal|center_vertical"
                            android:paddingTop="15dp"
                            android:paddingBottom="15dp"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:src="@mipmap/my_store_service"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:layout_marginTop="5dp"
                                android:textSize="@dimen/ac_text_size_12"
                                android:textColor="@color/col_333"
                                android:text="在线客服"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                        <LinearLayout
                            android:background="@drawable/white_gray_selector"
                            android:id="@+id/my_store_kffw_lin"
                            android:gravity="center_horizontal|center_vertical"
                            android:paddingTop="15dp"
                            android:paddingBottom="15dp"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:src="@mipmap/my_store_phone"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:layout_marginTop="5dp"
                                android:textSize="@dimen/ac_text_size_12"
