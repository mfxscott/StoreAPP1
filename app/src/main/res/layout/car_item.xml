<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/white"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:padding="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <CheckBox
            android:visibility="visible"
            android:id="@+id/car_item_checkbox"
            android:layout_margin="10dp"
            android:layout_gravity="center_vertical"
            android:button="@null"
            android:background="@drawable/check_box_type_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/car_item_iv"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/loading_img"
            android:layout_width="@dimen/goods_img_size"
            android:layout_height="@dimen/goods_img_size"/>
        <RelativeLayout
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_alignParentTop="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/car_item_name"
                    android:textColor="@color/col_333"
                    android:textSize="@dimen/ac_text_size_14"
                    android:text="新鲜上市的菠菜"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_centerVertical="true"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/car_item_model_tv"
                    android:textColor="@color/col_333"
                    android:textSize="@dimen/ac_text_size_12"
                    android:text="jiage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_alignParentBottom="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_centerVertical="true"
                    android:id="@+id/type_info_down_img"
                    android:src="@mipmap/down_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/type_info_price_tv"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/type_info_down_img"
                    android:textColor="@color/orange"
                    android:textSize="@dimen/ac_text_size_14"
                    android:text="￥8.80"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_toRightOf="@+id/type_info_price_tv"
                    android:layout_centerVertical="true"
                    android:textColor="@color/col_999"
                    android:textSize="@dimen/ac_text_size_12"
                    android:text="/斤"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_margin="10dp"
            android:id="@+id/car_add_sub_num_liny"
            android:layout_marginRight="5dp"
            android:background="@drawable/gray_car_round_shap"
            android:layout_gravity="bottom|right"
            android:gravity="bottom"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/car_item_sub_tv"
                android:gravity="center_horizontal"
                android:minEms="2"
                android:padding="5dp"
                android:text="-"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <View
                android:visibility="visible"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/line_bg" />
            <TextView
                android:gravity="center_horizontal"
                android:textSize="@dimen/ac_text_size_14"
                android:textColor="@color/col_333"
                android:id="@+id/car_item_num_edt"
                android:minEms="2"
                android:text="0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <View
                android:visibility="visible"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/line_bg" />
            <TextView
                android:id="@+id/car_item_add_tv"
                android:gravity="center_horizontal"
                android:minEms="2"
                android:padding="5dp"
                android:text="+"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>
        <View
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line_bg" />
    </LinearLayout>
</RelativeLayout>