<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg"
    android:orientation="vertical"
    tools:context="com.xianhao365.o2o.fragment.my.store.yhj.YHJActivity">
    <LinearLayout
        android:id="@+id/order_detail_title_lin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <include layout="@layout/all_title_layout"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/order_detail_info_lin"
        android:layout_below="@+id/order_detail_title_lin"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout

            android:background="@color/white"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:padding="15dp"
                    android:textSize="@dimen/ac_text_size_14"
                    android:textColor="@color/col_333"
                    android:text="鲜好商店"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_alignParentRight="true"
                    android:padding="15dp"
                    android:textSize="@dimen/ac_text_size_14"
                    android:textColor="@color/col_333"
                    android:text="总价：1000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/line_bg" />
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <android.support.v7.widget.RecyclerView
                    android:scrollbars="none"
                    android:id="@+id/cg_order_detail_recycler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_below="@+id/order_detail_info_lin"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:padding="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="@color/col_999"
                    android:textSize="@dimen/ac_text_size_14"
                    android:text="合计："
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/col_333"
                    android:textSize="@dimen/ac_text_size_14"
                    android:text="123456790"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/line_bg" />
            <LinearLayout
                android:padding="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="@color/col_999"
                    android:textSize="@dimen/ac_text_size_14"
                    android:text="预计到货日期："
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/col_333"
                    android:textSize="@dimen/ac_text_size_14"
                    android:text=""
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/line_bg" />
            <LinearLayout
                android:padding="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="@color/col_999"
                    android:textSize="@dimen/ac_text_size_14"
                    android:text="寄送至："
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/col_333"
                    android:textSize="@dimen/ac_text_size_14"
                    android:text=""
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/line_bg" />
            <LinearLayout
                android:padding="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="@color/col_999"
                    android:textSize="@dimen/ac_text_size_14"
                    android:text="收货人："
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/col_333"
                    android:textSize="@dimen/ac_text_size_14"
                    android:text=""
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>
    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_centerVertical="true"
            android:padding="15dp"
            android:textSize="@dimen/ac_text_size_14"
            android:textColor="@color/col_333"
            android:text="合计：29.00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:id="@+id/order_detail_btn_lin"
            android:layout_margin="10dp"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:padding="10dp"
                android:id="@+id/order_detail_wait_pay_cancel_btn"
                android:background="@drawable/cancel_order_selector"
                android:textSize="@dimen/ac_text_size_14"
                android:textColor="@color/orange"
                android:text="取消订单"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:padding="10dp"
                android:id="@+id/order_detail_wait_pay_take_btn"
                android:layout_marginLeft="10dp"
                android:background="@drawable/comfirm_take_selector"
                android:textSize="@dimen/ac_text_size_14"
                android:textColor="@color/white"
                android:text="立刻付款"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <TextView
            android:id="@+id/order_detail_done_tv"
            android:layout_margin="10dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:visibility="gone"
            android:textColor="@color/col_333"
            android:textSize="@dimen/ac_text_size_14"
            android:text="已完成"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
</RelativeLayout>