<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/app_bg"
              android:orientation="vertical"
              tools:context="com.scott.shopplat.fragment.my.store.AccManageActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <include layout="@layout/all_title_layout"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_margin="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_margin="10dp"
            android:textSize="@dimen/ac_text_size_14"
            android:textColor="@color/col_888"
            android:text="充值金额(元)"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
            android:textSize="@dimen/ac_text_size_14"
            android:maxLength="10"
            android:digits="1234567890."
            android:inputType="number"
            android:textColorHint="@color/col_hint"
            android:textColor="@color/col_333"
            android:padding="10dp"
            android:hint="请输入充值金额"
            android:background="@drawable/white_round_shap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <TextView
        android:layout_margin="10dp"
        android:textSize="@dimen/ac_text_size_14"
        android:textColor="@color/col_888"
        android:paddingLeft="15dp"
        android:text="选择支付方式"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <RelativeLayout
        android:id="@+id/topup_wxpay_rel"
        android:background="@drawable/white_gray_selector"
        android:padding="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/topup_wx_pay_iv"
            android:src="@mipmap/wx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:text="微信支付"
            android:layout_toRightOf="@+id/topup_wx_pay_iv"
            android:textColor="@color/col_333"
            android:textSize="@dimen/ac_text_size_14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:visibility="gone"
            android:id="@+id/topup_wx_check_img"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@mipmap/topup_pay_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <View
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_bg" />
    <RelativeLayout
        android:id="@+id/topup_zfbpay_rel"
        android:background="@drawable/white_gray_selector"
        android:padding="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/topup_zfb_pay_iv"
            android:src="@mipmap/zfb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:text="支付宝支付"
            android:layout_toRightOf="@+id/topup_zfb_pay_iv"
            android:textColor="@color/col_333"
            android:textSize="@dimen/ac_text_size_14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:visibility="gone"
            android:id="@+id/topup_zfb_check_img"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@mipmap/topup_pay_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <View
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_bg" />
    <RelativeLayout
        android:id="@+id/topup_yhkpay_rel"
        android:background="@drawable/white_gray_selector"
        android:padding="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/topup_yhk_pay_iv"
            android:src="@mipmap/yhk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:text="银行卡支付"
            android:layout_toRightOf="@+id/topup_yhk_pay_iv"
            android:textColor="@color/col_333"
            android:textSize="@dimen/ac_text_size_14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:visibility="visible"
            android:id="@+id/topup_yhk_check_img"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@mipmap/topup_pay_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <Button
        android:id="@+id/topup_btn"
        android:textSize="@dimen/ac_text_size_18"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="30dp"
        android:padding="10dp"
        android:textColor="@color/white"
        android:text="充值"
        android:background="@drawable/login_button_selector"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>