<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/app_bg"
              android:orientation="vertical"
              tools:context="com.scott.shopplat.fragment.my.store.AccManageActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <include layout="@layout/all_title_layout"
            />
    </LinearLayout>
    <LinearLayout
        android:background="@color/white"
        android:layout_marginTop="10dp"
        android:paddingLeft="15dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="@dimen/ac_text_size_14"
            android:layout_gravity="center_vertical"
            android:minEms="5"
            android:textColor="@color/col_888"
            android:text="头像"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/acc_info_headimg"
            android:src="@mipmap/default_head"
            android:layout_width="60dp"
            android:layout_height="60dp"/>
    </LinearLayout>
    <View
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_bg" />
    <LinearLayout
        android:background="@color/white"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:padding="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="@dimen/ac_text_size_14"
            android:layout_gravity="center_vertical"
            android:minEms="5"
            android:textColor="@color/col_888"
            android:text="账户"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:textSize="@dimen/ac_text_size_14"
            android:layout_gravity="center_vertical"
            android:textColor="@color/col_333"
            android:text="123456"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_gravity="center_vertical"
            android:minEms="5"
            android:textSize="@dimen/ac_text_size_14"
            android:textColor="@color/col_888"
            android:text="用户名"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
            android:textSize="@dimen/ac_text_size_14"
            android:padding="5dp"
            android:background="@color/transparent"
            android:layout_gravity="center_vertical"
            android:textColor="@color/col_333"
            android:text="鲜好惠"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <View
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_bg" />
    <LinearLayout
        android:background="@color/white"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_gravity="center_vertical"
            android:minEms="5"
            android:textSize="@dimen/ac_text_size_14"
            android:textColor="@color/col_888"
            android:text="收货地址"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
            android:textSize="@dimen/ac_text_size_14"
            android:padding="5dp"
            android:background="@color/transparent"
            android:layout_gravity="center_vertical"
            android:textColor="@color/col_333"
            android:text="广东省深圳市"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <View
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_bg" />
    <LinearLayout
        android:background="@color/white"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_gravity="center_vertical"
            android:minEms="5"
            android:textSize="@dimen/ac_text_size_14"
            android:textColor="@color/col_888"
            android:text="联系人"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
            android:textSize="@dimen/ac_text_size_14"
            android:padding="5dp"
            android:background="@color/transparent"
            android:layout_gravity="center_vertical"
            android:textColor="@color/col_333"
            android:text="鲜好惠"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <View
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_bg" />
    <LinearLayout
        android:background="@color/white"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_gravity="center_vertical"
            android:minEms="5"
            android:textSize="@dimen/ac_text_size_14"
            android:textColor="@color/col_888"
            android:text="联系电话"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
            android:textSize="@dimen/ac_text_size_14"
            android:padding="5dp"
            android:background="@color/transparent"
            android:layout_gravity="center_vertical"
            android:textColor="@color/col_333"
            android:text="123456789"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <Button
        android:id="@+id/acc_info_update_btn"
        android:textSize="@dimen/ac_text_size_18"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="20dp"
        android:padding="10dp"
        android:textColor="@color/white"
        android:text="确定修改"
        android:background="@drawable/login_button_selector"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>