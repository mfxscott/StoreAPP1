<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:padding="15dp"
                android:textSize="@dimen/ac_text_size_14"
                android:textColor="@color/col_333"
                android:text="鲜好商店"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_alignParentRight="true"
                android:padding="15dp"
                android:textSize="@dimen/ac_text_size_14"
                android:textColor="@color/col_333"
                android:text="2017.07.06 09:02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line_bg" />
        <RelativeLayout
            android:id="@+id/order_wait_pay_rel1"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_marginLeft="5dp"
                android:src="@mipmap/img_gdy"
                android:id="@+id/order_wait_pay_item_iv"
                android:layout_width="@dimen/goods_img_info_size"
                android:layout_height="@dimen/goods_img_info_size"/>
            <LinearLayout
                android:layout_marginLeft="5dp"
                android:layout_centerVertical="true"
                android:orientation="vertical"
                android:layout_toRightOf="@+id/order_wait_pay_item_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="@dimen/ac_text_size_14"
                    android:textColor="@color/col_333"
                    android:text="新鲜上市的黄豆芽"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:textSize="@dimen/ac_text_size_14"
                    android:textColor="@color/col_333"
                    android:text="￥44.00/袋（10斤）"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textStyle="bold"
                        android:textSize="@dimen/ac_text_size_14"
                        android:textColor="@color/col_333"
                        android:text="￥5.8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:textSize="@dimen/ac_text_size_12"
                        android:textColor="@color/col_999"
                        android:text="/斤"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/order_wait_pay_item_mp_tv"
                        android:layout_marginLeft="5dp"
                        android:textSize="@dimen/ac_text_size_12"
                        android:textColor="@color/col_999"
                        android:text="￥6.8/斤"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_marginRight="5dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="@color/col_333"
                    android:textSize="@dimen/ac_text_size_14"
                    android:text="x 5斤"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:textColor="@color/col_333"
                    android:textSize="@dimen/ac_text_size_14"
                    android:text="36.88元"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line_bg" />
        <RelativeLayout
            android:id="@+id/order_wait_pay_rel2"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_marginLeft="5dp"
                android:src="@mipmap/img_hlg"
                android:id="@+id/order_wait_pay_item_iv2"
                android:layout_width="@dimen/goods_img_info_size"
                android:layout_height="@dimen/goods_img_info_size"/>
            <LinearLayout
                android:layout_marginLeft="5dp"
                android:layout_centerVertical="true"
                android:orientation="vertical"
                android:layout_toRightOf="@+id/order_wait_pay_item_iv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="@dimen/ac_text_size_14"
                    android:textColor="@color/col_333"
                    android:text="新鲜上市的黄豆芽"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:textSize="@dimen/ac_text_size_14"
                    android:textColor="@color/col_333"
                    android:text="￥44.00/袋（10斤）"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textStyle="bold"
                        android:textSize="@dimen/ac_text_size_14"
                        android:textColor="@color/col_333"
                        android:text="￥5.8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:textSize="@dimen/ac_text_size_12"
                        android:textColor="@color/col_999"
                        android:text="/斤"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_marginLeft="5dp"
                        android:textSize="@dimen/ac_text_size_12"
                        android:textColor="@color/col_999"
                        android:text="￥6.8/斤"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_marginRight="5dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="@color/col_333"
                    android:textSize="@dimen/ac_text_size_14"
                    android:text="x 5斤"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:textColor="@color/col_333"
                    android:textSize="@dimen/ac_text_size_14"
                    android:text="36.88元"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line_bg" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_centerVertical="true"
                android:padding="15dp"
                android:textSize="@dimen/ac_text_size_14"
                android:textColor="@color/col_333"
                android:text="合计：29.00"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:id="@+id/order_btn_lin"
                android:layout_margin="10dp"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:padding="10dp"
                    android:id="@+id/order_wait_pay_cancel_btn"
                    android:background="@drawable/cancel_order_selector"
                    android:textSize="@dimen/ac_text_size_14"
                    android:textColor="@color/orange"
                    android:text="取消订单"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:padding="10dp"
                    android:id="@+id/order_wait_pay_take_btn"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/comfirm_take_selector"
                    android:textSize="@dimen/ac_text_size_14"
                    android:textColor="@color/white"
                    android:text="立刻付款"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
                <TextView
                    android:id="@+id/order_done_tv"
                    android:layout_margin="10dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:visibility="gone"
                    android:textColor="@color/col_333"
                    android:textSize="@dimen/ac_text_size_14"
                    android:text="已完成"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </RelativeLayout>
    </LinearLayout>
<TextView
    android:background="@color/app_bg"
    android:layout_width="match_parent"
    android:layout_height="10dp"/>
</LinearLayout>
