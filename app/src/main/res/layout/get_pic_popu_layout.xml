<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_margin="20dp"
        android:id="@+id/popu_lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@android:color/transparent"
        android:orientation="vertical" >
        <LinearLayout
            android:background="@android:color/transparent"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:background="@drawable/white_round_shap"
                android:layout_marginBottom="20dp"
                android:layout_margin="10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:padding="10dp"
                    android:text="拍照"
                    android:background="@color/transparent"
                    android:id="@+id/get_pic_take"
                    android:textColor="@color/col_333"
                    android:textSize="@dimen/ac_text_size_16"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <View
                    android:visibility="visible"
                    android:layout_marginLeft="10dip"
                    android:layout_marginRight="10dip"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/line_bg"/>
                <Button
                    android:visibility="visible"
                    android:padding="10dp"
                    android:id="@+id/get_pic_photo"
                    android:text="相册"
                    android:textColor="@color/col_333"
                    android:textSize="@dimen/ac_text_size_16"
                    android:background="@color/transparent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>
            <Button
                android:padding="10dp"
                android:id="@+id/get_pic_cancel"
                android:layout_margin="10dip"
                android:text="取消"
                android:textColor="@color/black"
                android:textSize="@dimen/ac_text_size_16"
                android:background="@drawable/white_round_shap"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>