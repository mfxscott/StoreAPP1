<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <RelativeLayout
        android:background="@drawable/white_gray_selector"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_toLeftOf="@+id/store_map_item_iv"
            android:id="@+id/store_map_item_liny"
            android:padding="5dp"
            android:orientation="vertical"

            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/store_map_item_title"
                android:textSize="@dimen/ac_text_size_14"
                android:textColor="@color/col_333"
                android:text="标题"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/store_map_item_address"
                android:layout_marginTop="5dp"
                android:textSize="@dimen/ac_text_size_14"
                android:textColor="@color/col_333"
                android:text="广东省深圳市罗湖区莲塘街道富达花园富达花园"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <TextView
            android:background="@mipmap/checked"
            android:visibility="visible"
            android:id="@+id/store_map_item_iv"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <View
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_bg" />
</LinearLayout>
